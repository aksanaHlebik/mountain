}
 
.content .wrapper_for_content {
	max-width: 1920px;
	margin: 0 auto;
}

.content .item_img {
    padding: 100px 90px 10px;
	/*justify-content: center;*/
	text-align: center;
	/*display: flex;*/
}
 
.content .item_img img {
	width: 150px;
	box-sizing: border-box;
}

.content .item_text {
    padding: 10px 0 50px;
	justify-content: center;
	display: flex;
}

.content .item_text p {
	width: 400px;
	box-sizing: border-box;
	font-size: 22px;
	text-align: justify;
	vertical-align:middle;
}

.content .item_text_with_button {
    padding: 20px 0 50px;
	justify-content: center;
	display: flex;
}

.content .item_text_with_button p {
	width: 300px;
	box-sizing: border-box;
	font-size: 22px;
	text-align: justify;
	vertical-align:middle;
}

span{
	font-size: 20px;
	font-style: italic;	
	
	
}

.content .line{
