html, header, body, ul, li{
	margin: 0;
	padding: 0;
}

header{
	/*background:#000;*/
	/*max-width: 1920px;*/
	height: 200px;
	font-size: 18px;
	line-height: 80px;
	border: 5px solid red;
	
}

.wrapper{
	max-width: 1920px;
	margin: 0 auto;
	background:#000;
	height: 100px;
	border: 5px solid yellow;
}

 .top {
	 float: left; 
	 margin: 12px 100px;
	 border: 1px solid red;
}
  
 .top form{
	  margin: 0 0;
  }
.search{
	background:#ccc6c0;
	border: 3px solid #ccc6c0;
	font-size: 18px;
	color: #fff;
	/*display: inline;*/
	height: 40px;
	width: 300px;
	/*padding: 10px 0;*/
	margin: 15px 0;
}

.button{
	width: 40px;
	height: 40px;
	font-size: 18px;
	cursor: pointer;
	background: url(../img/lypa.svg) no-repeat center;
	background-color: #ccc6c0;
	border: 3px solid #ccc6c0;
}


.wrapper li{
	list-style-type: none;
	margin-left: 40px;
	font-size: 24px;
	text-decoration: none;
	float: right;
	
}
 
 .wrapper_for_menu{
	max-width: 1920px;
	border: 5px solid blue;
	height: 80px;
	background:#eee;
	margin: 0 auto;
	display:flex;
 }
 
 .wrapper_for_menu li{
	list-style-type: none;
	margin: 40px;
	font-size: 24px;
	text-decoration: none;
	border: 5px solid blue;
	display: inline;

	/*float: left;*/
}



	
.wrapper_for_menu .left{
	float: left;
}

.wrapper_for_menu .right{
	float: right;
}

  .wrapper li a{
	color: inherit;
	text-decoration: none;
	color: #C4C5C6;
}

  .wrapper_for_menu li a{
	color: inherit;
	text-decoration: none;
	color: #000;
}

